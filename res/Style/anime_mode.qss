    color: #F48FB1;
}
QCalendarWidget QAbstractItemView::item {
    background: #FFF1F5;
    color: #4A2F2F;
}
QCalendarWidget QAbstractItemView::item:hover {
    background: #FFE4EC;
    color: #4A2F2F;
}
QCalendarWidget QAbstractItemView::item:selected {
    background: #F48FB1;
    color: #4A2F2F;
}
QCalendarWidget QToolButton {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #FFF1F5, stop:1 #FFE4EC);
