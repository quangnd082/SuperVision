    border: none;
    padding: 4px;
}
QCalendarWidget QToolButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #FFFFFF, stop:1 #FFF1F5);
}
QCalendarWidget QToolButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #F48FB1, stop:1 #F06292);
}
QCalendarWidget #qt_calendar_navigationbar {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #FFF1F5, stop:1 #FFE4EC);
    border: 1px solid #F48FB1;
    color: #4A2F2F;
}
QCalendarWidget #qt_calendar_calendarview {
    background: #FFF1F5;
    color: #4A2F2F;
}
QCalendarWidget #qt_calendar_prevmonth,
QCalendarWidget #qt_calendar_nextmonth {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #FFF1F5, stop:1 #FFE4EC);
    color: #4A2F2F;
}
QCalendarWidget #qt_calendar_prevmonth:hover,
QCalendarWidget #qt_calendar_nextmonth:hover {
