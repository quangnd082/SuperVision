/* ==================== QLabel Status ==================== */
QLabel[status="WAIT"],
QLabel[status="WAIT_PRODUCT"],
QLabel[status="WAIT_TRIGGER"] {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #FFE082, stop:1 #FFCA28);
    color: black;
    font-weight: bold;
    padding: 6px;
    border-radius: 8px;
    font-size: 60px;
}

QLabel[status="PASS"] {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #34C759, stop:1 #28A745);
    color: white;
    font-weight: bold;
    padding: 6px;
    border-radius: 8px;
}
QLabel[status="FAIL"] {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #FF3B30, stop:1 #D32F2F);
    color: white;
    font-weight: bold;
    padding: 6px;
    border-radius: 8px;
}

/* ==================== General QPushButton ==================== */
QPushButton {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #FFF1F5, stop:1 #FFE4EC);
    border: 1px solid #F48FB1;
    border-radius: 10px;
    padding: 10px;
    color: #4A2F2F;
    font-weight: bold;
}
QPushButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #FFFFFF, stop:1 #FFF1F5);
}
QPushButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #F48FB1, stop:1 #F06292);
}

/* ==================== QMessageBox Buttons ==================== */
QMessageBox QPushButton {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #FFF1F5, stop:1 #FFE4EC);
    color: #4A2F2F;
    border-radius: 8px;
    padding: 8px 40px;
    border: 1px solid #F48FB1;
}
QMessageBox QPushButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #FFFFFF, stop:1 #FFF1F5);
}
QMessageBox QPushButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #F48FB1, stop:1 #F06292);
}

/* ==================== QTabWidget ==================== */
QTabWidget#tab_widget_main::pane {
    border: 1px solid #F48FB1;
    border-radius: 12px;
    background: #FFF1F5;
    padding: 12px;
}

QTabWidget::pane {
    border: 1px solid #F48FB1;
    border-radius: 12px;
    background: #FFF1F5;
    padding: 12px;
}

QTabBar::tab {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #FFF1F5, stop:1 #FFE4EC);
    border: 1px solid #F48FB1;
    padding: 8px 20px;
    border-radius: 10px;
    margin: 4px;
    color: #4A2F2F;
}
QTabBar::tab:selected {
    background: #F48FB1;
    border-bottom: 2px solid #F06292;
    color: #4A2F2F;
}
QTabBar::tab:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #FFFFFF, stop:1 #FFF1F5);
}

/* ==================== QComboBox ==================== */
QComboBox {
    background: #FFF1F5;
    border: 1px solid #F48FB1;
    padding: 8px;
    border-radius: 10px;
    min-width: 60px;
    color: #4A2F2F;
}
QComboBox:hover {
    border-color: #F06292;
}
QComboBox:on {
    background: #FFE4EC;
}
QComboBox QAbstractItemView {
    background: #FFF1F5;
    border: 1px solid #F48FB1;
    selection-background-color: #F48FB1;
    selection-color: #4A2F2F;
    border-radius: 8px;
    color: #4A2F2F;
}
QComboBox QAbstractItemView::item:hover {
    background: #FFE4EC;
    color: #4A2F2F;
}
QComboBox QAbstractItemView::item:selected {
    background: #F48FB1;
    color: #4A2F2F;
}
QComboBox::drop-down {
    border-radius: 8px;
    border: none;
    width: 40px;
    background: #FFE4EC;
}

/* ==================== QSpinBox & QDoubleSpinBox ==================== */
QSpinBox, QDoubleSpinBox {
    background: #FFF1F5;
    border: 1px solid #F48FB1;
    border-radius: 10px;
    padding: 8px;
    color: #4A2F2F;
}
QSpinBox:hover, QDoubleSpinBox:hover {
    border-color: #F06292;
}
QSpinBox:focus, QDoubleSpinBox:focus {
    border-color: #F48FB1;
}

/* ==================== QLineEdit ==================== */
QLineEdit {
    background: #FFF1F5;
    border: 1px solid #F48FB1;
    border-radius: 10px;
    padding: 8px;
    min-width: 60px;
    color: #4A2F2F;
}
QLineEdit:hover {
    border-color: #F06292;
}
QLineEdit:focus {
    border-color: #F48FB1;
}

/* ==================== QMenuBar ==================== */
QMenuBar {
    background: #f3c7d6;
    padding: 4px 12px;
    border-bottom: 1px solid #f3c7d6;
}
QMenuBar::item {
    background: transparent;
    padding: 8px 16px;
    border-radius: 6px;
    color: #4A2F2F;
}
QMenuBar::item:hover {
    background: #FFE4EC;
    color: #4A2F2F;
}
QMenuBar::item:pressed {
    background: #FFF1F5;
    color: #4A2F2F;
}
QMenu {
    background: #FFF1F5;
    border: 1px solid #F48FB1;
    border-radius: 8px;
}
QMenu::item {
    padding: 8px 24px;
    border-radius: 6px;
    color: #4A2F2F;
}
QMenu::item:selected {
    background: #FFE4EC;
    color: #4A2F2F;
}

/* ==================== QGroupBox ==================== */
QGroupBox {
    border: 2px solid #F48FB1;
    border-radius: 10px;
    margin-top: 20px;
    font-weight: bold;
    color: #4A2F2F;
}
QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top center;
    padding: 6px 16px;
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #FFF1F5, stop:1 #FFE4EC);
    border: 1px solid #F48FB1;
    border-radius: 8px;
    color: #4A2F2F;
}

/* ==================== QMainWindow & QWidget ==================== */
QMainWindow {
    background: #FFF1F5;
    color: #4A2F2F;
    font-family: "Segoe UI", "Arial", sans-serif;
    font-size: 22px;
}
QWidget {
    color: #4A2F2F;
    font-size: 22px;
}

/* ==================== QToolBox ==================== */
QToolBox, QToolBox QWidget {
    background: #FFF1F5;
}
QToolBox {
    border: 1px solid #F48FB1;
    border-radius: 12px;
    padding: 10px;
}
QToolBox::tab {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #FFF1F5, stop:1 #FFE4EC);
    color: #4A2F2F;
    border: 1px solid #F48FB1;
    border-radius: 10px;
    padding: 5px 15px;
}
QToolBox::tab:selected {
    background: #F48FB1;
    color: #4A2F2F;
    border-bottom: 2px solid #F06292;
}
QToolBox::tab:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #FFFFFF, stop:1 #FFF1F5);
}

/* ==================== QDateTimeEdit (for calendar popup) ==================== */
QDateTimeEdit {
    background: #FFF1F5;
    border: 1px solid #F48FB1;
    border-radius: 10px;
    padding: 8px;
    color: #4A2F2F;
}
QDateTimeEdit::drop-down {
    border-radius: 8px;
    border: none;
    width: 40px;
    background: #FFE4EC;
}

/* ==================== QCalendarWidget ==================== */
QCalendarWidget {
    background: #FFF1F5;
