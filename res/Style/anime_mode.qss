/* ==================== QTableWidget ==================== */
QTableWidget {
    background: #FFF1F5;
    border: 1px solid #F48FB1;
    border-radius: 10px;
    color: #4A2F2F;
    gridline-color: #F48FB1;
}

QTableWidget::item:selected {
    background: #F48FB1;
    color: #4A2F2F;
}
QTableWidget QHeaderView::section {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #FFF1F5, stop:1 #FFE4EC);
    color: #4A2F2F;
    border: 1px solid #F48FB1;
    padding: 4px;
